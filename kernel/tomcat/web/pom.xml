<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>


    <parent>
        <groupId>org.osivia.ajax-portal.kernel.tomcat</groupId>
        <artifactId>osivia-portal-tomcat-parent</artifactId>
        <version>5.2.23-SNAPSHOT</version>
    </parent>

    <artifactId>osivia-portal-tomcat-web</artifactId>
    <packaging>war</packaging>


    <name>OSIVIA Portal - Tomcat - WebApp</name>
    <description>OSIVIA Portal Tomcat webapp.</description>


    <properties>
        <war.name>portal</war.name>
    </properties>


    <dependencies>
    
        <!-- OSIVIA Portal kernel -->
        <dependency>
            <groupId>org.osivia.ajax-portal.kernel</groupId>
            <artifactId>osivia-portal-kernel-common</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
         
        <dependency>
            <groupId>org.osivia.ajax-portal.kernel</groupId>
            <artifactId>osivia-portal-kernel-jbp</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
        
        <dependency>
            <groupId>org.osivia.ajax-portal.kernel</groupId>
            <artifactId>osivia-portal-kernel-jboss-compat</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
      
        <!-- OSIVIA Portal services -->
        <dependency>
            <groupId>org.osivia.ajax-portal.services</groupId>
            <artifactId>osivia-portal-services-common</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.osivia.ajax-portal.services</groupId>
            <artifactId>osivia-portal-services-cms</artifactId>
            <scope>compile</scope>
        </dependency>
    
        <!-- OSIVIA Portal Tomcat lib -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>osivia-portal-tomcat-lib</artifactId>
            <version>${project.version}</version>
            <scope>compile</scope>
        </dependency>
 
<!--
		<dependency>
			<groupId>net.bull.javamelody</groupId>
			<artifactId>javamelody-core</artifactId>
			<version>1.91.0</version>
		</dependency>
-->             
        <!-- JBoss -->

        <dependency>
            <groupId>org.jboss</groupId>
            <artifactId>jbossxb</artifactId>
            <version>2.0.0.GA</version>
            <scope>compile</scope>
  			<exclusions>
                <exclusion>
                    <artifactId>xercesImpl</artifactId>
                    <groupId>apache-xerces</groupId>
                </exclusion>
            </exclusions>            
        </dependency>        
        <dependency>
            <groupId>org.jboss</groupId>
            <artifactId>jboss-reflect</artifactId>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.portal.portlet</groupId>
            <artifactId>portlet-controller</artifactId>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.jboss.portal.portlet</groupId>
            <artifactId>portlet-mc</artifactId>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        

		
		<dependency>
		    <groupId>org.jboss.logging</groupId>
		    <artifactId>jboss-logging-log4j</artifactId>
		    <version>2.1.2.GA</version>

		</dependency>
		
    </dependencies>


	<profiles>
		<profile>
			<id>copy-tomcat</id>
		    <activation>
		      <property>
		        <name>web.path</name>
		      </property>
		    </activation>			
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<copy file="${project.basedir}/target/${war.name}.war" todir="${web.path}" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <warName>${war.name}</warName>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
